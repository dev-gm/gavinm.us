<!-- Contact-->
<section class="page-section" id="contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mt-0">Contact Me!</h2>
                <hr class="divider my-4" />
                <p class="text-muted mb-5"></p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 mr-auto text-center">
                <!-- Make sure to change the email address in BOTH the anchor text and the link target below!-->
                <a class="d-block" href="{{{contact.github.link}}}">
                    <i class="fab fa-github-square fa-3x mb-3 text-muted"></i>
                </a>
            </div>
            <div class="col-lg-4 ml-auto text-center">
                <a class="d-block" href="tel:{{{contact.phone}}}">
                    <i class="fas fa-phone-square fa-3x mb-3 text-muted"></i>
                </a>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <!-- Make sure to change the email address in BOTH the anchor text and the link target below!-->
                <a class="d-block" href="mailto:{{{contact.email}}}">
                    <i class="fas fa-envelope-square fa-3x mb-3 text-muted"></i>
                </a>
            </div>
        </div>
    </div>
</section>
